= form_for @content_descriptor do |f|
  - if @content_descriptor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@content_descriptor.errors.count, "error")} prohibited this content_descriptor from being saved:"
      %ul
        - @content_descriptor.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :tag
    = f.text_field :tag
  .field
    = f.label :short
    = f.text_field :short
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
