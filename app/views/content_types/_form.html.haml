= form_for @content_type do |f|
  - if @content_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@content_type.errors.count, "error")} prohibited this content_type from being saved:"
      %ul
        - @content_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
