%section.k-section.uk-clearfix.uk-flex.uk-flex-center.uk-flex-middle
  .uk-container-center.uk-text-center.uk-width-5-10
    %h2 Log in
    .uk-margin-top
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'uk-form '}, wrapper: :uikit_form )  do |f|
        .uk-form-row.uk-text-center
          = f.input :email, required: false, autofocus: true, placeholder: 'Email Address', label: false
        .uk-form-row.uk-text-center
          = f.input :password, required: false, placeholder: 'Password', label: false
        .uk-form-row.uk-text-center
          = f.input :remember_me, as: :boolean, label: 'Remember me', wrapper: :uikit_checkbox if devise_mapping.rememberable?
        .uk-form-row.uk-text-center.uk-form-controls
          = f.button :submit, "Log in"
    .uk-container-center.uk-text-center.uk-width-8-10
      = render "users/shared/links"
