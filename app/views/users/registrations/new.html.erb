<div class="panel panel-primary">
    <div class="panel-heading">
      <h2>Welcome to Kudoso!</h2>
    </div>
    <div class="panel-body">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' },
                          wrapper: :form_stacked ) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>
            <%= f.input :first_name, required: true %>
            <%= f.input :last_name, required: true %>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
            <%= f.input :password_confirmation, required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
          </div>
      <% end %>
    </div>
    <div class="panel-footer">
      <%= render "users/shared/links" %>
    </div>
</div>


