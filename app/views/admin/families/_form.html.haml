= simple_form_for([:admin, @family]) do |f|
  - if @family.errors.any?
    #error_explanation
      %h2
        = pluralize(@family.errors.count, "error")
        prohibited this family from being saved:
      %ul
        - @family.errors.full_messages.each do |message|
          %li= message
  .field
    = f.input :name
  .field
    = f.input :primary_contact_id, collection: User.all, label_method: :full_name, value_method: :id
  .field
    = f.input :timezone, as: :time_zone, priority: /US/
  .actions
    = f.submit
