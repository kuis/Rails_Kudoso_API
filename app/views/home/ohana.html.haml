%section.k-section.uk-clearfix
  .uk-container.uk-container-center
    %article
      %header
        %h2
          %strong Sign Up for Ohana
      %p
        Kudoso is currently only available in the United States
      .uk-container-center.uk-width-small-1-1.uk-width-medium-6-10.uk-width-large-6-10
        %form#payment-form.uk-form
          .uk-form-row.uk-text-center
            %input.uk-form-large.uk-width-4-10{:name => "first_name", :placeholder => "Your First Name", :type => "text", :value => "", :id => 'signup-first-name'}/
            %input.uk-form-large.uk-width-4-10{:name => "last_name", :placeholder => "Your Last Name", :type => "text", :value => "", :id => 'signup-last-name'}/
          .uk-form-row.uk-text-center
            %input.uk-form-large.uk-width-8-10{:name => "email", :placeholder => "Your Email Address", :type => "email", :value => "", :id => 'signup-email'}/
          .uk-form-row.uk-text-center
            %input.uk-form-large.uk-width-4-10{:name => "password", :placeholder => "Enter a Password", :type => "password", :value => "", :id => 'signup-password'}/
            %input.uk-form-large.uk-width-4-10{:name => "password_confirmation", :placeholder => "Confirm Password", :type => "password", :value => "", :id => 'signup-password-confirmation'}/
          .uk-form-row.uk-text-center
            %hr
          .uk-form-row.uk-text-center
            %input.uk-form-large.uk-width-8-10{:name => "address", :placeholder => "Shipping Address", :type => "text", :value => "", :id => 'signup-address'}/
          .uk-form-row.uk-text-center
            %input.uk-form-large.uk-width-4-10{:name => "city", :placeholder => "City", :type => "text", :value => "", :id => 'signup-city'}/
            %select.uk-form-large.uk-width-2-10{:name => "state", :value => "", :id => 'signup-state'}
              - CS.states(:us).each do |key, value|
                %option{value: "#{key}"}
                  #{value}
            %input.uk-form-large.uk-width-2-10{:name => "zip", :placeholder => "Zip Code", :type => "text", :value => "", :id => 'signup-zip'}/
          .uk-form-row.uk-text-center
            %input.uk-form-large.uk-width-8-10{:name => "cc", :placeholder => "Your Credit Card Number", :type => "text", :value => "", :id => 'signup-cc'}/
          .uk-form-row.uk-text-center
            %input.uk-form-large.uk-width-2-10{:name => "cc-exp-month", :placeholder => "Exp Month", :type => "text", :value => "", :id => 'signup-cc-exp-month'}/
            %input.uk-form-large.uk-width-2-10{:name => "cc-exp-year", :placeholder => "Exp Year", :type => "text", :value => "", :id => 'signup-cc-exp-year'}/
            %input.uk-form-large.uk-width-4-10{:name => "cc-cvc", :placeholder => "Security Code", :type => "text", :value => "", :id => 'signup-cc-cvc'}/
          .uk-form-row.uk-text-center
            .payment-errors.uk-form-danger
          .uk-form-row.uk-text-center
            %button.uk-button.uk-button-primary.uk-button-large.uk-width-8-10{:name => "submit", type: 'submit'} Sign Up for Ohana @ $149/yr
